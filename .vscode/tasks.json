{
  "version": "2.0.0",
  "inputs": [
    {
        "id": "podName",
        "type": "promptString",
        "description": "Enter the pod name",
        "default": ""
    }
  ],
  "tasks": [
      {
          "label": "Proxy Dashboard",
          "type": "shell",
          "command": "echo 'visit http://localhost:8001/api/v1/namespaces/kubernetes-dashboard/services/https:kubernetes-dashboard:/proxy'; kubectl proxy",
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "dedicated",
              "showReuseMessage": false,
              "clear": false
          },
          "problemMatcher": []
      },
      {
        "label": "Log Service",
        "type": "shell",
        "command": "./cmds/local-dev.sh log ${input:podName}",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Open Service Shell",
        "type": "shell",
        "command": "./cmds/local-dev.sh exec ${input:podName}",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
          "label": "Generate Dashboard Token",
          "type": "shell",
          "command": "./cmds/local-dev.sh dashboard-token",
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "dedicated",
              "showReuseMessage": false,
              "clear": false
          },
          "problemMatcher": []
      },
      {
          "label": "Proxy Gateway HTTP",
          "type": "shell",
          "command": "kubectl port-forward svc/gateway 3000:3000",
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "dedicated",
              "showReuseMessage": false,
              "clear": false
          },
          "problemMatcher": []
      },
      {
        "label": "Proxy Admin DB",
        "type": "shell",
        "command": "kubectl port-forward svc/postgres 5432:5432",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Client Watch",
        "type": "shell",
        "command": "./cmds/local-dev.sh exec ucd-lib-client \"npm  --prefix ./ucd-lib-client run watch\"",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Admin Client Watch",
        "type": "shell",
        "command": "./cmds/local-dev.sh exec gateway \"npm run admin-ui-watch\"",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Setup gcloud and kubectl",
        "type": "shell",
        "command": "./cmds/setup-gcloud-kubectl.sh local-dev",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Deploy Pods",
        "type": "shell",
        "command": "./cmds/local-dev.sh start",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Build Images",
        "type": "shell",
        "command": "./cmds/local-dev.sh build",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Remove all pods and services",
        "type": "shell",
        "command": "./cmds/local-dev.sh stop",
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Sleep",
        "type": "shell",
        "command": "sleep 5",
        "presentation": {
            "echo": true,
            "reveal": "never",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false
        },
        "problemMatcher": []
      },
      {
        "label": "Run all watch tasks",
        "dependsOn": [
            "Proxy Dashboard",
            "Proxy Gateway HTTP",
            "Proxy Admin DB",
            "Client Watch"
        ]
      },
      {
          "label": "Run all local-dev tasks",
          "dependsOrder": "sequence",
          "dependsOn": [
              "Deploy Pods",
              "Generate Dashboard Token",
              "Sleep",
              "Run all watch tasks"
          ]
      }
  ]
}
